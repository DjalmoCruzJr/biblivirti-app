<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sysmob.biblivirti">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_blue"
        android:label="@string/application_name"
        android:supportsRtl="true"
        android:theme="@style/BiblivirtiTheme">

        <!-- Splash Activity -->
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/activity_login_label"
            android:screenOrientation="portrait"
            android:theme="@style/BiblivirtiTheme.NoActionBar" />

        <!-- Nova Conta Activity -->
        <activity
            android:name=".activities.NovaContaActivity"
            android:label="@string/activity_nova_conta_label"
            android:screenOrientation="portrait" />

        <!-- Recupear Senha Activity -->
        <activity
            android:name=".activities.RecuperarSenhaActivity"
            android:label="@string/activity_recuperar_senha_label"
            android:screenOrientation="portrait" />
        />

        <!-- Novo Grupo Activity -->
        <activity
            android:name=".activities.NovoGrupoActivity"
            android:label="@string/activity_novo_grupo_label"
            android:screenOrientation="portrait" />

        <!-- Novo Matertial Activity -->
        <activity
            android:name=".activities.NovoMaterialActivity"
            android:label="@string/activity_novo_material_label"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.PerfilActivity" />
        <activity android:name=".activities.EditarPerfilActivity" />
        <activity android:name=".activities.InfoGrupoActivity"></activity>
    </application>

</manifest>