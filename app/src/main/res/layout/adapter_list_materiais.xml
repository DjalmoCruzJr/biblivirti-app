<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrayDark"
    android:elevation="4dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/textMACTIPO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="MACTIPO"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textMADALDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="MADALDT"
                android:textColor="@color/colorBlack"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textMACDESC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textMACTIPO"
                android:layout_marginTop="5dp"
                android:text="MACDESC"
                android:textColor="@color/colorBlack"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageMACFOTO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textMACDESC"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_video_100px_gray" />

            <View
                android:id="@+id/LINHA"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/imageMACFOTO"
                android:layout_margin="2dp"
                android:background="@color/colorGrayDark" />

            <TextView
                android:id="@+id/textMANQTDCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/LINHA"
                android:layout_marginTop="5dp"
                android:text="Comentários: XX"
                android:textColor="@color/colorBlack"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textMANQTDHA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/LINHA"
                android:layout_marginTop="5dp"
                android:text="Visualizações: XX"
                android:textColor="@color/colorBlack"
                android:textStyle="normal" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>