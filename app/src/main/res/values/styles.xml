<resources>

    <!-- App base theme -->
    <style name="BiblivirtiTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Splash Activity Theme  -->
    <style name="BiblivirtiTheme.SplashActivity" parent="BiblivirtiTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Login Activity Theme  -->
    <style name="BiblivirtiTheme.LoginActivity" parent="BiblivirtiTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <!-- Home Activity Theme  -->
    <style name="BiblivirtiTheme.HomeActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Pesquisar Grupos Activity Theme  -->
    <style name="BiblivirtiTheme.PesquisarGruposActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dialogs Theme  -->
    <style name="BiblivirtiTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
